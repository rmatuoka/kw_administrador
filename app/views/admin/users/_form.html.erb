    <div id="Box_register_form" class="twelve columns">
		
		<%= form_for [:admin, @user] do |f| %>
		<div class="field">
			<%= f.label :name, "Nome" %>
			<%= f.text_field :name, :placeholder => "Nome" %>
		</div>
		<div class="field">
			<%= f.label :last_name, "Sobrenome" %>
			<%= f.text_field :last_name, :placeholder => "Sobrenome" %>
		</div>
		<div class="field">
			<%= f.label :email, "E-mail" %>
			<%= f.text_field :email, :placeholder => "E-mail" %>
		</div>
		<div class="field">
			<%= f.label :password, "Senha" %>
			<%= f.password_field :password, :placeholder => "Senha" %>
		</div>
		<div class="field">
			<%= f.label :password_confirmation, "Confirmar Senha" %>
			<%= f.password_field :password_confirmation, :placeholder => "Confirme sua senha" %>
		</div>		
		<div id="Box_register_form_regras">
		  <h1>Regras</h1>
		  <p>
			<%= f.radio_button :role, :admin%>Administrador<br/>
			<%= f.radio_button :role, :supervisor %>Supervisor<br/>
			<%= f.radio_button :role, :user %>Usu√°rio<br/>
		  </p>
		</div>
		
  		<p><%= f.submit "Salvar", :class => "button" %></p>
		<%end%>
	</div>
