<!DOCTYPE html>
<html>
<head>
  <title>KwAdministrador</title>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	<div id="user_nav">
	  <% if current_user %>
	    <%= link_to "Editar", edit_user_path(:current) %> |
	    <%= link_to "Logout", logout_path %> |
	    <span>Bem vindo <strong><%= current_user.name %></strong>!</span>
	  <% else %>
	    <%= link_to "Registrar", new_user_path %> |
	    <%= link_to "Login", login_path %>
	  <% end %>
	</div>
<%= yield %>

</body>
</html>
